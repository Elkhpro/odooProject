<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="book_form_view">
        <field name="name">book.form</field>
        <field name="model">esi_lecture.book</field>
        <field name="arch" type="xml">
            <form string="Book Form">
                <sheet> 
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="toggle_like"
                            icon="fa-thumbs-up" style="font-size: 25px; color:#7C7BAD;"
                            attrs="{'invisible': [('is_liked_by_current_user','=', False)]}">
                            <field string="Like" name="like_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="toggle_like"
                            icon="fa-thumbs-o-up" style="font-size: 25px; color:#7C7BAD;"
                            attrs="{'invisible': [('is_liked_by_current_user','=', True)]}">
                            <field string="Like" name="like_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="authors"/>
                        <field name="num_pages" />
                        <field name="is_liked_by_current_user" invisible="1"/>
                        <field name="like_count"/>
                    </group>
                    
                    <group>
                        <field name="publication_date"/>
                        <field name="cover_image" widget="image" options="{'size' : [150, 150]}"/>
                    </group>
                    <group>
                        <field name="description" widget="html" options="{'style': 'width: 100%'}"/>
                    </group>
                </sheet> 
                
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="book_tree_view">
        <field name="name">book.tree</field>
        <field name="model">esi_lecture.book</field>
        <field name="arch" type="xml">
            <tree string="Book Tree">
                <field name="name"/>
                <field name="publication_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="book_search_view">
        <field name="name">book.search</field>
        <field name="model">esi_lecture.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="num_pages"/>
                <filter name="without_author" string="Sans auteur" domain="[('authors', '=', False)]"/>
            </search>
        </field>
    </record>

    

</odoo>